{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/folders.schema.json",
    "title": "Dossiers",
    "description": "Dossiers dans le cadre d'un contrat",
    "required": ["folders"],
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "$schema": {
            "title" : "Schéma JSON",
            "description" : "URL du schéma",
            "type": "string",
            "format": "uri"
        },
        "folders": {
            "type": "array",
            "additionalProperties": false,
            "items": {
                "minItems": 1,
                "required": [ "contractId", "reference","creditor","debtor","debts"],
                "type": "object",
                "properties": {
                    "contractId" : {
                        "title" : "Identifiant du contrat",
                        "description" : "Identifiant du contrat entre la société de recouvrement et son client. Il s'agit de l'identifiant unique dans Blitz Collection",
                        "type" : "integer"
                    },
                    "reference" : {
                        "title" : "Référence",
                        "description" : "Référence du dossier chez le client de la société de recouvrement. Cette référence doit être unique pour un client donné.",
                        "type": "string"
                    },
                    "creditor": {
                        "oneOf": [
                            {
                                "title": "Créancier",
                                "description": "Créancier du dossier, si la reference n'existe pas le créancier est créé avec les informations données sinon uniquement la reference est nécessaire car les informations ne sont pas intégrées.",
                                "$ref": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/person.schema.json"
                            },
                            {
                                "title": "Créancier",
                                "description": "Créancier du dossier, si la reference n'existe pas le créancier est créé avec les informations données sinon uniquement la reference est nécessaire car les informations ne sont pas intégrées.",
                                "required": ["reference"],
                                "type": "object",
                                "properties": {
                                    "reference": {
                                        "title" : "Référence",
                                        "description" : "Référence du créancier/client de la société de recouvrement. Cette référence doit être unique pour un client donné.",
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": false
                            }
                        ]                
                    },
                    "debtor": {
                        "title" : "Débiteur",
                        "$ref": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/person.schema.json"
                    },
                    "debts": {
                        "title": "Créances",
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "$ref": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/debt.schema.json"
                        }
                    },
                    "parties":{
                        "title": "Tiers",
                        "description": "Tiers impliqués dans le dossier",
                        "items": {
                            "$ref": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/person.schema.json"           
                        }
                    },
                    "incidentals" : {
                        "title": "Frais accessoires",
                        "description": "Frais accessoires liés au dossier et non directement aux créances",
                        "type": "array",
                        "items" : {
                            "$ref" : "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/incidental.schema.json"
                        }
                    },
                    "currencyCode" : {
                        "title" : "Code devise",
                        "description" : "Code devise du dossier. Ce code devise est utilisé en particulier pour les frais accessoires",
                        "$ref" : "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/currencyCode.schema.json"
                    }
                }
            }
        }
    }    
}