{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/folders.schema.json",
    "title": "Créancier",
    "description": "Informations sur le créancier et le contract de recouvrement",
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "$schema": {
            "title" : "Schéma JSON",
            "description" : "URL du schéma",
            "type": "string",
            "format": "uri"
        },
        "creditor": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "reference": {
                        "title": "Référence du créancier/client",
                        "description": "référence du créancier/client - information fournie par Blitz (correspond exactement au code client dans MGP)",
                        "type": "string"
                    },
                    "contracts": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "object",
                            "properties": {
                                "reference": {
                                    "title": "Référence du contrat",
                                    "description": "référence du contract - information fournie par Blitz (correspond au contrat régissant les honoraires, ...)",
                                    "type": "string"                                
                                },
                                "folders": {
                                    "type": "array",
                                    "minItems": 1,
                                    "uniqueItems": true,
                                    "items": {
                                        "$ref": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/folder.schema.json"
                                    }
                                }
                            }
                        },
                        "required": ["reference"]
                    }
                }
            },
            "required": ["reference", "contracts"]
        }
    }
}