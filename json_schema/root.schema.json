{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/main/json_schema/root.schema.json",
    "title": "Flux de dossiers",
    "description": "Flux de dossiers, regroupés par contrat et par créancier",
    "additionalProperties": false,
    "required": ["foldersStreams"],
    "type": "object",
    "properties": {
        "$schema": {
            "title" : "Schéma JSON",
            "description" : "URL du schéma",
            "type": "string",
            "format": "uri"
        },
        "collectionCompanyReference": {
            "title": "Reference du cabinet de recouvrement",
            "description": "Reference du cabinet de recouvrement fournie par Blitz",
            "type": "string"
        },
        "foldersStreams": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "./stream.schema.json"
            }
        }
    }
}