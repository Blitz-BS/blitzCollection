{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/MGP-421-modularisation-de-l-objet-json-schema-pour-l-integ/json_schema/phone.schema.json",
    "title": "Numéro de téléphone",
    "description": "Numéro de téléphone",
    "required": [ "value", "isMobile" ],
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "title" : "Schéma JSON",
            "description" : "URL du schéma",
            "type": "string",
            "format": "uri"
        },
        "value": {
            "title" : "Numéro de téléphone",
            "description": "Exemple : +33 6 12 34 56 78",
            "type": "string"
        },
        "isMobile": {
            "title" : "Est un numéro de téléphone mobile",
            "type": "boolean",
            "default": false
        },
        "description": {
            "title" : "Description libre du numéro de téléphone",
            "description": "Exemple : Ligne fixe du bureau",
            "type": "string",
            "maxLength": 255
        },
        "qualification" : {
            "title" : "Qualification du numéro de téléphone",
            "enum": ["personal", "professional", "deprecated"]
        }
    }
}