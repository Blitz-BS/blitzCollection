{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/fix/BCC-659-Corriger-les-fausses-validations-du-schema/json_schema/adjustment.schema.json",
    "title": "Opérations diverses",
    "description": "Opérations diverses (OD)",
    "unevaluatedProperties": false,
    "type": "object",
    "allOf": [
        { "$ref": "./entry.schema.json" },
        {
            "required": ["category", "subcategory"],
            "properties": {
                "category": {
                    "title" : "Type d'écriture comptable",
                    "const" : "adjustment"
                },
                "subcategory": {
                    "title": "Sous type d'opération diverse",
                    "description" : "facture, ajustement de change",
                    "enum": ["error", "exchangeRateAdjustment"]
                }
            }
        }
    ]
}