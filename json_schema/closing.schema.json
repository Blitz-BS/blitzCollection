{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Blitz-BS/blitzCollection/refs/heads/main/json_schema/closing.schema.json",
    "title": "Clôture",
    "description": "Clôture du dossier",
    "unevaluatedProperties": false,
    "type": "object",
    "allOf": [
        {
            "$ref": "./entry.schema.json"
        },
        {
            "required": ["category", "subcategory"],
            "properties": {
                "category": {
                    "title" : "Type d'écriture comptable",
                    "const" : "closing"
                },
                "subcategory": {
                    "title": "Sous type de clôture",
                    "description" : "trop perçu, irrécouvrable",
                    "enum": ["overcharged", "irrecoverable"]
                }
            }
        }
    ]
}